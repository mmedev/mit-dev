<?xml version="1.0" encoding="UTF-8"?>

<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="
             http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
             http://camel.apache.org/schema/blueprint http://camel.apache.org/schema/blueprint/camel-blueprint.xsd">

    <camelContext id="camel_jms" xmlns="http://camel.apache.org/schema/blueprint">
    <propertyPlaceholder location="camel-conf/jms.cm"/>
    <template id="camelJMS"/>
    <endpoint uri="activemq:{{jms_checkDomainRequestDestinationProp}}?{{jms_defaultOpt}}" id="domainCheck"/>
    <route>
        <from ref="domainCheck"/>
        <log message="PSB is checking domain ..."/>
        <to uri="bean:jmsRequestProcessor?method=getJMSRequest(java.lang.String)"/>
        <to uri="bean:domainService?method=checkDomain(com.melbourneit.services.jms.domain.CheckDomainRequest)"/>
    </route>
</camelContext>
</blueprint>
